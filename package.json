{
  "name": "gochu",
  "version": "0.1.0",
  "description": "View a graph of your project's modules!",
  "main": "dist/gochu.js",
  "preferGlobal": true,
  "bin": {
    "gochu": "cli/gochu",
    "gochu-web": "cli/gochu-web"
  },
  "files": [
    "cli/",
    "dist/",
    "example/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build:client": "cd client/ && webpack --bail",
    "build:server": "babel server/src/ -d dist/",
    "build:lib": "babel lib/src/ -d dist/lib/",
    "build": "yarn build:client && yarn build:server && yarn build:lib",
    "lint": "eslint client/ server/ lib/ shared/ && flow",
    "pretest": "yarn build && yarn lint",
    "test": "ava",
    "prerelease": "yarn build",
    "release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbmoz/gochu.git"
  },
  "keywords": [
    "modules",
    "tree",
    "deps",
    "dependencies",
    "graph",
    "chart",
    "import",
    "export",
    "require",
    "ast",
    "es6",
    "visualization",
    "viz"
  ],
  "author": "Joe Lee <https://github.com/bbmoz>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbmoz/gochu/issues"
  },
  "homepage": "https://github.com/bbmoz/gochu",
  "ava": {
    "files": [
      "client/test/**/*.js",
      "lib/test/**/*.js"
    ],
    "source": [
      "client/src/**/*.js",
      "!client/src/index.js",
      "lib/src/**/*.js",
      "!lib/src/index.js"
    ],
    "failWithoutAssertions": true,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "devDependencies": {
    "ava": "^0.19.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "^6.24.0",
    "body-parser": "^1.17.1",
    "css-loader": "^0.28.0",
    "cytoscape": "^3.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "esprima": "^3.1.3",
    "express": "^4.15.2",
    "flow-bin": "^0.44.2",
    "glob-fs": "^0.1.6",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.3",
    "nodemon": "^1.11.0",
    "request": "^2.81.0",
    "semantic-release": "^6.3.2",
    "sinon": "^2.1.0",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3",
    "style-loader": "^0.16.1",
    "validate-commit-msg": "^2.12.1",
    "webpack": "^2.3.2",
    "yargs": "^7.1.0"
  }
}
